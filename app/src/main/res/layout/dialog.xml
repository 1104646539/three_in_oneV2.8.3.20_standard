<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_bg" >

        <TextView
            android:id="@+id/dialog_tishi"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="编辑信息"
            android:visibility="gone"
            android:textSize="18sp" />

        <View
            android:id="@+id/dialog_line"
            android:layout_below="@+id/dialog_tishi"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="#f4f4f4" />

        <EditText
            android:layout_below="@+id/dialog_line"
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:hint="请输入名称"
            android:focusable="true"
            android:gravity="center" />
        
         <EditText
            android:layout_below="@+id/dialog_message"
            android:id="@+id/dialog_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:hint="请输入试剂代码"
            android:visibility="gone"
            android:focusable="true"
         
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_change_btu_shape"
                android:textSize="30sp"
                android:text="取消"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/dialog_truebtu"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_change_btu_shape"
                android:textSize="30sp"
                android:text="确定"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>