<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_view"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/edit_text2"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cb"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cb_selector" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_sample_aisle_number"
        style="@style/EditTextResultShow2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/et_sample_number"
        style="@style/EditTextResultShow2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:enabled="false"
        android:layout_weight="3"
        android:digits="@string/dis_numberaz"
        android:ellipsize="end"
        android:focusable="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_sample_name"
        style="@style/EditTextResultShow2"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_sample_type"
        style="@style/EditTextResultShow2"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="26sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/et_yzl"
        style="@style/EditTextResultShow2"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/et_judge"
        style="@style/EditTextResultShow2"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_bchecked_org"
        style="@style/EditTextResultShow2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_sample_source"
        style="@style/EditTextResultShow2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/et_sample_weight"
        style="@style/EditTextResultShow2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:digits="1234567890."
        android:ellipsize="end"
        android:focusable="true"
        android:inputType="number"
        android:textSize="26sp" />
</LinearLayout>