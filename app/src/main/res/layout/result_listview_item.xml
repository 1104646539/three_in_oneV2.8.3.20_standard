<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="2300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/result_lin"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/result_id"
        android:layout_weight="1.2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测流水号"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_company"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测单位"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_people"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检验员"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_shi_company"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="试剂厂商"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/tv_checked_org"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="商品来源"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_list_item_project"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测项目"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_list_item_sample"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="样品名称"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_list_item_type"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="样品类型"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_xian"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="限量标准"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_lin_value"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="临界值"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_check_value"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测值"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_hp"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="样品浓度"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_result"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测结果"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/result_time"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="检测时间"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_update_status"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="上传状态"
        android:textSize="16sp" />
</LinearLayout>