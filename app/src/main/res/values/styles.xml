    <style name="btnSystemSetting">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/selector_btn_setting</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="EditTextResultShow">
        <!--
        android:background="@drawable/edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="26sp"
        -->
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextResultShow2">
        <!--
        android:background="@drawable/edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="26sp"
        -->
        <item name="android:background">@drawable/edit_text2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextShow">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CheckBoxTest">
        <!--
        android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="A1"
                android:textSize="26sp"
        -->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextViewResultItem">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewProjectItem">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 基础数据底部按钮风格 -->
    <style name="btn_baseData_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/btn_default1</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CheckBox_ResultQuery">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="title_style">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/title_normal_green</item>

    </style>

    <!-- 检测界面下拉框风格 -->
    <style name="checkactivity_spinner_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- 检测界面textview风格 -->
    <style name="checkactivity_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <!-- 检测界面edittext风格 -->
    <style name="checkactivity_edittext_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number|numberDecimal</item>

    </style>

    <!-- 检测界面按钮风格 -->
    <style name="checkactivity_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

     <!-- 项目管理界面按钮风格 -->
    <style name="project_manager_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/main_change_btu_shape</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="baseData_title_style1">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="baseData_title_style2">
        <item name="android:textSize">20sp</item>
    </style>


    <!-- 检测项目条目样式-->
    <style name="item_project_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="checkbox_null_box">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/selector_check_setting</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <!--<item name="android:textColor">@drawable/txt_select_selector</item>-->
    </style>

</resources>
